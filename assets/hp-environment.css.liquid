.hp-env{
    margin-top: 75px;
}
.env-content{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    height: 780px;
}
.env-video{
    width: 100%;
    height: 100%;
}
.env-video video{
    object-fit: cover;
}
.env-text-content{
    background-color: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.env-text-content-innerwrap{
    width: 480px;
    text-align: center;
}
.env-text-content-innerwrap h2{
    font-family: "Manrope 800";
    margin: 0;
}
.env-text-content-innerwrap h1{
    font-family: "Manrope 800";
    font-size: 78px;
    margin: 0;
    letter-spacing: -1.6px;
    line-height: 1.11;
}
.env-text-content-innerwrap p{
    margin-top: 10px;
}
.env-text-content-innerwrap a{
    display: inline-block;
    font-family: "Manrope 800";
    background: #000;
    font-size: 18px;
    line-height: 25px;
    padding: 12px 40px;
    color: #fff;
    margin-top: 20px;

}
.env-text-content-innerwrap a:hover{
    text-decoration: none;
    color: #000;
    background: #fff;
    transition: 0.3s;
    border: 1px solid #000;
}

@media all and (max-width: 600px){
    .env-text-content-innerwrap {
        width: 100%;    
    }
    .env-content {
        display: grid;
        grid-template-columns: repeat(1,1fr);
    }
    .env-text-content-innerwrap h2{
        font-size: 18px;
    }
    .env-text-content-innerwrap h1{
        font-size: 47px;
    }
    .env-text-content-innerwrap a{
        font-size: 14px;
    }
}