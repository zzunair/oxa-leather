.hpShopCaseWrapper{
    padding-top: 75px;
}
.shopCaseHeading h1{
    font-family: "Manrope 800";
    font-size: 40px;
    text-align: center;
    color: #1b1b1b;
    cursor: pointer;
    margin-top: unset;
    margin-bottom: 30px;
    position: relative;
}
.image-wrap img.desktop{
    width: 100%;
    object-fit: contain;
}
.image-wrap img.mobile{
    display: none;
}
.image-wrap{
    position: relative;
}
.image-content{
    position: absolute;
    top: 25%;
    right: 30%;
}
.image-content h1{
    color: #fff;
    font-family: "Manrope 800";
    margin-bottom: 20px;

}
.image-content a{
    display: inline-block;
    font-family: "Manrope 800";
    background: #fff;
    font-size: 18px;
    line-height: 25px;
    padding: 12px 40px;
    color: #1d1d1d;
}
.image-content a:hover{
    color: #fff;
    background: #000;
    transition: 0.3s;
    text-decoration: none;
}

.products-wrap {
    display: grid;
    /* grid-template-columns: 33% 33% 32%; */
    column-gap: 15px;
    row-gap: 15px;
    margin-top: 15px;
    grid-template-columns: repeat(3, 1fr);
}
.products-wrap a{
    text-decoration: none;
    color: #000;
}
.products-wrap .products{
    background-color: #fff;
}
.products img {
    width: 100%;
    object-fit: contain;
}
.products h1{
    text-align: center;
    font-family: "Manrope 800";
}
@media all and (max-width: 600px){
    .image-wrap .desktop{
        display: none;
    }
    .image-wrap img.mobile{
        display: block;
        width: 100%;
    }
    .image-content{
        right: 50%;
        top: 60%;
        transform: translateX(50%);
    }
    .products-wrap{
        grid-template-columns: repeat(2, 1fr);
        overflow: hidden;
    }
    .products-wrap .products{
        height: 150px;
      overflow: hidden;
    }
    .products-wrap .products:last-child {
        grid-column: 1/-1;
    }
    .image-content a{
        font-size: 14px;
    }
    .products h1 {
        font-size: 24px;
    }
}