<div class="banmain">
  <div class="bancontent page-width">
    <div class="leftban">
       <a href="{{ section.settings.link }}">{{ section.settings.heading }}</a>
       <span class="leftban_inner">{{ section.settings.heading2 }}</a>
    </div>
    <div class="rightban">
      {% for block in section.blocks %}
      <img src="{{ block.settings.logo | img_url:'master' }}">
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "banner bottom",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"text here"
      },
       {
        "type":"text",
        "id":"heading2",
        "label":"text here without link"
      },
      {
        "type":"url",
        "id":"link",
        "label":"text link"
      }
    ],
    "blocks":[
      {
        "name":"ban img",
        "type":"banimg",
        "settings":[
          {
            "type":"image_picker",
            "id":"logo",
            "label":"select logo"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"banner bottom"
      }
    ]
  }
{% endschema %}

