<div class="blackmain">
  <div class="blackcontent">
    <div class="bleft">
      <div class="blackleft">
      <h3>{{ section.settings.heading }}</h3>
      <p>{{ section.settings.desc }}</p>
      <div class="bdata">
        {% for block in section.blocks %}
          <div class="lines">
            <img src="{{ block.settings.limg | img_url:'master' }}">
          <p>{{ block.settings.ltxt }}</p>
          </div>
        {% endfor %}
      </div>
        <div class="shopallbtn">
      <a href="{{ section.settings.btnlink }}">{{ section.settings.btntxt }}</a>
        </div>
      </div>
    </div>
    <div class="bright">
      <div class="bimages">
        <img class="logoimg" src="{{ section.settings.firstimg | img_url:'master' }}">
        <img class="rimg" src="{{ section.settings.secimg | img_url:'master' }}">
      </div>
    </div>
    
  </div>
</div>
{% schema %}
  {
    "name": "blacksection",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"heading"
      },
      {
        "type":"text",
        "id":"desc",
        "label":"description"
      },
      {
        "type":"text",
        "id":"btntxt",
        "label":"button text"
      },
      {
        "type":"url",
        "id":"btnlink",
        "label":"button link"
      },
      {
        "type":"image_picker",
        "id":"firstimg",
        "label":"topimage"
      },
      {
        "type":"image_picker",
        "id":"secimg",
        "label":"right image"
      }
    ],
    "blocks":[
      {
        "name":"add line",
        "type":"line",
        "settings":[
          {
            "type":"image_picker",
            "id":"limg",
            "label":"image"
          },
          {
            "type":"text",
            "id":"ltxt",
            "label":"text"
          }
        ]
      }
    ],
    "presets":[
      {
        "name":"blacksection"
      }
    ]
  }
{% endschema %}

