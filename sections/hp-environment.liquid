{{ 'hp-environment.css' | asset_url | stylesheet_tag }}

{%- assign sec = section.settings -%}
<section id="hp-env" class="hp-env page-width">
    <div class="env-wrapper">
        <div class="env-content">
            <div class="env-video">
                <video width="100%" height="100%" autoplay loop muted>
                    <source src="{{sec.video}}">
                </video>
            </div>
            <div class="env-text-content">
                <div class="env-text-content-innerwrap">
                    <h2>{{sec.sub-heading}}</h2>
                    <h1>{{sec.heading}}</h1>
                    <p>{{sec.desc}}</p>
                    <a href="{{sec.btn-url}}">{{sec.btn-text}}</a>
                </div>
            <div>
        </div>
    </div>
</section>


{% schema %}
    {
        "name": "Enviornment Section",
        "settings": [
            {
                "type": "text",
                "id": "video",
                "label": "Video Url"
            },
            {
                "type": "text",
                "id": "sub-heading",
                "label": "Sub Heading"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            },
            {
                "type": "text",
                "id": "desc",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "btn-text",
                "label": "Button Text"
            },
            {
                "type": "url",
                "id": "btn-url",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
                "name": "Enviornment Section"
            }
        ]
    }
{% endschema %}